# Server
PORT=3000
BODY_LIMIT=3mb
SESSION_COOKIE_NAME=session_token
SESSION_COOKIE_MAX_AGE=604800000
SESSION_COOKIE_SAMESITE=lax
CORS_ALLOWED_ORIGINS=https://app.example.com

# Admin bootstrap account
ADMIN_EMAIL=admin@brillar.io
ADMIN_PASSWORD=admin

# Database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=brillarhrportal

# SMTP (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM=hr@example.com

# Microsoft SSO (optional)
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT=common
MS_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Pairing configuration
PAIR_AGENT_ID=agent-service
PAIR_AGENT_SECRET=replace-with-long-random-string
PAIR_TOKEN_SECRET=replace-with-long-random-string
PAIR_TOKEN_ISSUER=brillar-hr-portal
PAIR_TOKEN_AUDIENCE=agent-clients
PAIR_TOKEN_SCOPE=pair:connect
PAIR_TOKEN_TTL_SECONDS=300
PAIR_REQUEST_TTL_MIN_SECONDS=60
PAIR_REQUEST_TTL_MAX_SECONDS=120
PAIR_POLL_LEASE_SECONDS=20
PAIR_INIT_RATE_LIMIT=10
PAIR_INIT_RATE_WINDOW_MS=60000
PAIR_POLL_RATE_LIMIT=30
PAIR_POLL_RATE_WINDOW_MS=60000
PAIR_CLAIM_RATE_LIMIT=60
PAIR_CLAIM_RATE_WINDOW_MS=60000
PAIR_AGENT_SIGNATURE_TOLERANCE_MS=120000
PAIR_AGENT_REPLAY_WINDOW_MS=300000

# Widget tokens
WIDGET_JWT_SECRET=replace-with-widget-secret
WIDGET_JWT_EXPIRES_IN=300
